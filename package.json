{
  "name": "codepilot",
  "version": "0.3.2",
  "description": "CodePilot - Your ultimate dev project hub",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.codepilot.app",
    "productName": "CodePilot",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CodePilot"
    },
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ]
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3",
    "vite": "^6.0.5"
  }
}